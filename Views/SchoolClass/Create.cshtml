@model MvcCoreProject_Iqbal.Models.SchoolClass

<form enctype="multipart/form-data" asp-controller="Categories" asp-action="Create" method="post" class="mt-3">
    <div class="modal-header">
        <h5 class="modal-title" id="categoryModalLabel">Add new Class</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="form-group">
            SchoolClass :
            <input asp-for="Name" class="form-control" placeholder="Class Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div id="0">
            <hr />

            <div class="row">
                <div class="form-group col-md-6">
                    Name :
                    <input asp-for="Students[0].Name" class="form-control" placeholder="Name" />
                    <span asp-validation-for="Students[0].Name" class="text-danger"></span>

                </div>
                <div class="form-group col-md-6">
                    Address :
                    <input asp-for="Students[0].Address" class="form-control" />
                    <span asp-validation-for="Students[0].Address" class="text-danger"></span>

                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-12">
                    Image :

                    <img id="_0" src="" width="300" data-tag="itemImageinCategory" />
                    <input id="Image" name="Image" type="file" data-tag="_0" onchange="changeImage(this, event)" />
                    <span asp-validation-for="Students[0].Image" class="text-danger"></span>
                </div>

            </div>
            <br />
            <div class="row">
                <div class="form-group col-md-6">
                    Entry Date :
                    <input asp-for="Students[0].EntryDate" class="form-control" />
                    <span asp-validation-for="Students[0].EntryDate" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    Fee : 
                    <input asp-for="Students[0].Fee" class="form-control" />
                    <span asp-validation-for="Students[0].Fee" class="text-danger"></span>
                </div>
            </div>
        </div>
        <hr />
        <div class="col-md-12">
            <button id="addModelButton" type="button" class="btn btn-dark btn-block">Add more Student</button>
        </div>
        <input id="sl" type="hidden" value="0" />
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <input type="submit" class="btn btn-primary" value="Save" />
    </div>
</form>



